{
  "name": "scopeguard",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "db:generate": "npm run generate --workspace=@scopeguard/db",
    "db:migrate": "npm run migrate:dev --workspace=@scopeguard/db",
    "db:seed": "npm run seed --workspace=@scopeguard/db",
    "db:studio": "npm run studio --workspace=@scopeguard/db",
    "infra:up": "docker compose up -d db s3",
    "infra:down": "docker compose down",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5",
    "typescript": "^5.4.5"
  }
}
